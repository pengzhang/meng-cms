# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index()
GET		/init								controllers.Application.cms_init()


# Admin page
GET		/admin								controllers.admin.Admin.index()
GET		/admin/main							controllers.admin.Admin.main()

# Admin Article
GET		/admin/article						controllers.admin.Admin.article()
GET		/admin/article/add					controllers.admin.article.Article.add()
POST	/admin/article/create				controllers.admin.article.Article.create()
GET		/admin/article/edit/:code			controllers.admin.article.Article.edit(code:String)
POST	/admin/article/update				controllers.admin.article.Article.update()
GET		/admin/article/del/:code			controllers.admin.article.Article.delete(code:String)

# Admin Article Category
GET		/admin/article/category				controllers.admin.Admin.article_category()
GET		/admin/article/category/add			controllers.admin.article.ArticleCategory.add()
POST	/admin/article/category/create		controllers.admin.article.ArticleCategory.create()
GET		/admin/article/category/edit/:code	controllers.admin.article.ArticleCategory.edit(code:String)
POST	/admin/article/category/update		controllers.admin.article.ArticleCategory.update()
GET		/admin/article/category/del/:code	controllers.admin.article.ArticleCategory.delete(code:String)

# Admin Message
